rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Corrected path to match the client-side code
    match /product-images/{imageName} {
      
      // Anyone can read (view) the product images.
      allow read: if true;

      // Only authenticated users can upload, update, or delete product images.
      // For simplicity, we are not checking for admin role here, just authentication.
      // You can tighten this later by using custom claims if needed.
      allow write: if request.auth != null;
    }

    // For any other path in the storage, deny all read and write operations
    // to ensure that only specified paths are accessible.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
